<?xml version='1.0' encoding='UTF-8'?>
<project>
  <actions/>
  <description>This job builds development releases for ePages versions &gt;= 6.17.16 from a GIT branch on github.com.&lt;br/&gt;&#xd;
Beware that you cannot build development releases from you local disk. You must use a repository on github.com.&#xd;
</description>
  <logRotator class="hudson.tasks.LogRotator">
    <daysToKeep>60</daysToKeep>
    <numToKeep>-1</numToKeep>
    <artifactDaysToKeep>-1</artifactDaysToKeep>
    <artifactNumToKeep>-1</artifactNumToKeep>
  </logRotator>
  <keepDependencies>false</keepDependencies>
  <properties>
    <hudson.plugins.buildblocker.BuildBlockerProperty plugin="build-blocker-plugin@1.7.3">
      <useBuildBlocker>false</useBuildBlocker>
      <blockLevel>UNDEFINED</blockLevel>
      <scanQueueFor>DISABLED</scanQueueFor>
      <blockingJobs></blockingJobs>
    </hudson.plugins.buildblocker.BuildBlockerProperty>
    <jenkins.advancedqueue.AdvancedQueueSorterJobProperty plugin="PrioritySorter@2.9">
      <useJobPriority>false</useJobPriority>
      <priority>-1</priority>
    </jenkins.advancedqueue.AdvancedQueueSorterJobProperty>
    <com.chikli.hudson.plugin.naginator.NaginatorOptOutProperty plugin="naginator@1.17">
      <optOut>false</optOut>
    </com.chikli.hudson.plugin.naginator.NaginatorOptOutProperty>
    <hudson.model.ParametersDefinitionProperty>
      <parameterDefinitions>
        <hudson.model.StringParameterDefinition>
          <name>VERSION</name>
          <description>The ePages version of the release to build, format must be x.y.z where x,y,z are numbers.&lt;br/&gt;
Example: &lt;b&gt;6.17.17&lt;/b&gt;
</description>
          <defaultValue></defaultValue>
        </hudson.model.StringParameterDefinition>
        <hudson.model.StringParameterDefinition>
          <name>SUFFIX</name>
          <description>The identifier of the release to build which distinguishes this release from other.&lt;br/&gt;
Example: &lt;b&gt;Shippo_pre_test&lt;/b&gt;&lt;br/&gt;
The resulting repository is named VERSION-SUFFIX, e.g. 6.17.17-Shippo_pre_test</description>
          <defaultValue></defaultValue>
        </hudson.model.StringParameterDefinition>
        <hudson.model.StringParameterDefinition>
          <name>GITHUB_ACCOUNT</name>
          <description>The username of the github.com repository.&lt;br/&gt;
Example: &lt;b&gt;jviladoms&lt;/b&gt;&lt;br/&gt;
Then, the used repository is git@github.com:GITHUB_ACCOUNT/Cartridges.git, e.g. git@github.com:jviladoms/Cartridges.git&lt;br&gt;
Beware that you cannot build development releases from you local disk. You must use a repository on github.com.</description>
          <defaultValue></defaultValue>
        </hudson.model.StringParameterDefinition>
        <hudson.model.StringParameterDefinition>
          <name>GITHUB_BRANCH</name>
          <description>The branch of the repository git@github.com:GITHUB_ACCOUNT/Cartridges.git.&lt;br/&gt;
Example: &lt;b&gt;epic/Shippo-Create-Cartridge_EPG-35544&lt;/b&gt;</description>
          <defaultValue></defaultValue>
        </hudson.model.StringParameterDefinition>
      </parameterDefinitions>
    </hudson.model.ParametersDefinitionProperty>
    <com.sonyericsson.rebuild.RebuildSettings plugin="rebuild@1.25">
      <autoRebuild>false</autoRebuild>
      <rebuildDisabled>false</rebuildDisabled>
    </com.sonyericsson.rebuild.RebuildSettings>
    <de.pellepelster.jenkins.walldisplay.WallDisplayJobProperty plugin="jenkinswalldisplay@0.6.30"/>
  </properties>
  <scm class="hudson.scm.NullSCM"/>
  <quietPeriod>0</quietPeriod>
  <assignedNode>ep-build</assignedNode>
  <canRoam>false</canRoam>
  <disabled>false</disabled>
  <blockBuildWhenDownstreamBuilding>true</blockBuildWhenDownstreamBuilding>
  <blockBuildWhenUpstreamBuilding>false</blockBuildWhenUpstreamBuilding>
  <triggers/>
  <concurrentBuild>true</concurrentBuild>
  <builders>
    <hudson.tasks.Shell>
      <command># Deploy epages-infra repo.
if [[ ! -d ~/epages-infra/.git ]] ; then
    cd ~
    git clone git@github.com:ePages-de/epages-infra.git
else
    cd ~/epages-infra &amp;&amp; git pull origin master
fi</command>
    </hudson.tasks.Shell>
    <hudson.tasks.Shell>
      <command># Start the build process
~/epages-infra/scripts/epages/build/build-custom-epages.sh -v &quot;${VERSION}&quot; -s &quot;${SUFFIX}&quot; -u &quot;${GITHUB_ACCOUNT}&quot; -b &quot;${GITHUB_BRANCH}&quot;</command>
    </hudson.tasks.Shell>
  </builders>
  <publishers>
    <hudson.plugins.emailext.ExtendedEmailPublisher plugin="email-ext@2.41.3">
      <recipientList>f.ziller@epages.de</recipientList>
      <configuredTriggers>
